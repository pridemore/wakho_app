<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/BackgroundDoveGrey"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtNegUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/product_img"
                android:text="Allen Bonasi"
                android:textColor="#4B4E6D" />

            <TextView
                android:id="@+id/txtNegamt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_title"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/product_img"
                android:text="$0.00"
                android:textColor="#000"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/addToCart"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/product_title"
                android:src="@drawable/ic_purple_plus"
                android:layout_above="@+id/textView26"
                android:layout_alignParentTop="true" />


            <TextView
                android:id="@+id/txtNegTym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="13:46 am" />

            <TextView
                android:id="@+id/ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/txtNegTym"
                android:text="Accept"
                android:textAlignment="center"
                android:textColor="#4B4E6D"
                android:textSize="13sp"
                android:layout_alignLeft="@+id/addToCart"
                android:layout_alignStart="@+id/addToCart" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>