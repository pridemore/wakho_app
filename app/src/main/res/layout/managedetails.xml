<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titleLA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Parcel Details"
                android:textColor="@color/textColorPrimary" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="519dp"
            android:layout_marginTop="30dp"
            android:fitsSystemWindows="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ppoint"
                android:layout_alignRight="@+id/ppoint"
                android:layout_alignTop="@+id/txtfrm"
                android:layout_toEndOf="@+id/imageView"
                android:layout_toRightOf="@+id/imageView"
                android:text="Harare Waterfalls"
                android:textSize="18dp" />


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txtfrm"
                android:layout_alignTop="@+id/txtfrm"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_arrow_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:text="To" />


            <TextView
                android:id="@+id/txtfrm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="46dp"
                android:text="Masvingo Mucheke"
                android:textSize="18dp"
                android:layout_toLeftOf="@+id/txtdeltitle"
                android:layout_alignLeft="@+id/view"
                android:layout_alignStart="@+id/view" />

            <View
                android:id="@+id/view"
                android:layout_width="290dp"
                android:layout_height="1dp"
                android:layout_below="@+id/txtto"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/BackgroundDoveGrey" />

            <TextView
                android:id="@+id/idrecpi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView5"
                android:layout_alignBottom="@+id/textView5"
                android:layout_alignLeft="@+id/view"
                android:layout_alignStart="@+id/view"
                android:text="Fragility"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ppoint"
                android:layout_alignStart="@+id/ppoint"
                android:layout_below="@+id/view"
                android:textStyle="bold"
                android:text="Pickup point"
                android:layout_alignRight="@+id/view"
                android:layout_alignEnd="@+id/view" />

            <TextView
                android:id="@+id/recname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/idrecpi"
                android:layout_alignStart="@+id/idrecpi"
                android:layout_below="@+id/idrecpi"
                android:text="2/10"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/ppoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_toRightOf="@+id/imageView"
                android:text="Joina City"
                android:textSize="20dp"
                android:layout_alignRight="@+id/textView9"
                android:layout_alignEnd="@+id/textView9" />

            <View
                android:id="@+id/view2"
                android:layout_width="290dp"
                android:layout_height="1dp"
                android:layout_below="@+id/ppoint"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/BackgroundDoveGrey" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/view2"
                android:layout_alignTop="@+id/view2"
                android:layout_toLeftOf="@+id/ppoint"
                android:layout_toStartOf="@+id/ppoint"
                android:text="Recipient" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/view2"
                android:layout_alignStart="@+id/view2"
                android:layout_below="@+id/view2"
                android:text="Size (kgs)"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="45dp"
                android:text="Fee"
                android:textStyle="bold"
                android:layout_below="@+id/view2"
                android:layout_alignRight="@+id/accept"
                android:layout_alignEnd="@+id/accept"
                android:layout_alignLeft="@+id/accept"
                android:layout_alignStart="@+id/accept" />

            <!--<TextView-->
            <!--android:id="@+id/textView10"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignLeft="@+id/txtdelby"-->
            <!--android:layout_alignStart="@+id/txtdelby"-->
            <!--android:layout_below="@+id/view2"-->
            <!--android:text="Deliver By" />-->

            <TextView
                android:id="@+id/txtsize"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8"
                android:layout_below="@+id/textView8"
                android:text="+10000"
                android:textSize="17sp"
                android:layout_toLeftOf="@+id/txtdelby"
                android:layout_toStartOf="@+id/txtdelby" />

            <TextView
                android:id="@+id/fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="45dp"
                android:text="$3"
                android:textSize="17sp"
                android:layout_below="@+id/textView9"
                android:layout_alignLeft="@+id/textView9"
                android:layout_alignStart="@+id/textView9"
                android:layout_alignRight="@+id/textView9"
                android:layout_alignEnd="@+id/textView9" />

            <TextView
                android:id="@+id/txtdeltitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtsize"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38dp"
                android:text="Deliver By"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtdelby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtdeltitle"
                android:layout_centerInParent="true"
                android:text="13 June"
                android:textSize="17sp" />

            <Button
                android:id="@+id/quote"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txtdelby"
                android:layout_marginTop="23dp"
                android:layout_toLeftOf="@+id/txtdeltitle"
                android:layout_toStartOf="@+id/txtdeltitle"
                android:background="@drawable/my_button_bg"
                android:enabled="false"
                android:text="Edit"
                android:textColor="@color/textColorPrimary" />

            <Button
                android:id="@+id/accept"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/my_button_bg"
                android:textColor="@color/textColorPrimary"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/quote"
                android:layout_marginRight="35dp"
                android:enabled="false"
                android:text="DeLETE"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>