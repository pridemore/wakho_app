<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">


        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView

                android:id="@+id/profilemain"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/placeholder"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/pName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/profilemain"
                android:gravity="center"
                android:text="Allen Bonasi"
                android:textSize="22dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:layout_below="@+id/relativeLayout2"
            android:layout_marginTop="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:paddingBottom="30dp">

                <TextView
                    android:id="@+id/pFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/pDate"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/pDate"
                    android:layout_marginTop="46dp"
                    android:text="Masvingo"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/pFrom"
                    android:layout_alignTop="@+id/pFrom"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_arrow_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView"
                    android:layout_centerHorizontal="true"
                    android:text="To"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/view"
                    android:layout_alignEnd="@+id/pArrival"
                    android:layout_alignRight="@+id/pArrival"
                    android:layout_toEndOf="@+id/imageView"
                    android:layout_toRightOf="@+id/imageView"
                    android:text="Harare"
                    android:textSize="18dp" />

                <View
                    android:id="@+id/view"
                    android:layout_width="290dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/pFrom"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/BackgroundDoveGrey" />

                <TextView
                    android:id="@+id/idrecpi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignEnd="@+id/pDate"
                    android:layout_alignLeft="@+id/pDate"
                    android:layout_alignRight="@+id/pDate"
                    android:layout_alignStart="@+id/pDate"
                    android:layout_below="@+id/view"
                    android:text="Departure"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_toEndOf="@+id/imageView"
                    android:layout_toRightOf="@+id/imageView"
                    android:text="Pickup point"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView8"
                    android:layout_alignStart="@+id/textView8"
                    android:layout_below="@+id/idrecpi"
                    android:layout_toLeftOf="@+id/textView7"
                    android:layout_toStartOf="@+id/textView7"
                    android:text="Date/time"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/pPicUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/view2"
                    android:layout_alignLeft="@+id/textView5"
                    android:layout_alignRight="@+id/view2"
                    android:layout_alignStart="@+id/textView5"
                    android:layout_below="@+id/textView5"
                    android:text="Chicken inn"
                    android:textSize="18dp" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="290dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/pPicUp"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/BackgroundDoveGrey" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/view2"
                    android:layout_alignTop="@+id/view2"
                    android:layout_toLeftOf="@+id/pPicUp"
                    android:layout_toStartOf="@+id/pPicUp"
                    android:text="Recipient" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:layout_alignLeft="@+id/pSize"
                    android:layout_alignStart="@+id/pSize"
                    android:layout_below="@+id/view2"
                    android:layout_toLeftOf="@+id/pArrival"
                    android:text="Size (kgs)"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pFrag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/pArrival"
                    android:layout_alignRight="@+id/pArrival"
                    android:layout_below="@+id/view2"
                    android:layout_toEndOf="@+id/textView7"
                    android:layout_toRightOf="@+id/textView7"
                    android:paddingRight="45dp"
                    android:text="Fragility"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pSize"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"

                    android:layout_alignLeft="@+id/txtdelby"
                    android:layout_alignStart="@+id/txtdelby"
                    android:layout_below="@+id/textView8"
                    android:layout_toLeftOf="@+id/imageView"
                    android:layout_toStartOf="@+id/imageView"
                    android:text="+10000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/pFragile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/pFrag"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignStart="@+id/pFrag"
                    android:layout_below="@+id/pFrag"
                    android:paddingRight="45dp"
                    android:text="3"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/pArrival"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/cancelBtn"
                    android:layout_alignRight="@+id/cancelBtn"
                    android:layout_below="@+id/pSize"
                    android:layout_marginTop="38dp"
                    android:layout_toEndOf="@+id/quote"
                    android:layout_toRightOf="@+id/quote"
                    android:text="Arrival"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtdelby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/pArrival"
                    android:layout_alignLeft="@+id/view2"
                    android:layout_alignRight="@+id/pArrival"
                    android:layout_alignStart="@+id/view2"
                    android:layout_below="@+id/pArrival"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="13 June"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/quote"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/view2"
                    android:layout_alignStart="@+id/view2"
                    android:layout_below="@+id/txtdelby"
                    android:layout_marginTop="23dp"
                    android:layout_toLeftOf="@+id/textView7"
                    android:layout_toStartOf="@+id/textView7"
                    android:textColor="@color/textColorPrimary"
                    android:background="@drawable/my_button_bg"
                    android:text="Edit" />

                <Button
                    android:id="@+id/cancelBtn"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textColor="@color/textColorPrimary"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/quote"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/my_button_bg"
                    android:text="Delete" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</ScrollView>