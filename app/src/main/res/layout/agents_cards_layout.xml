<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="6dp"
    card_view:cardMaxElevation="1dp"
    app:ignore="NamespaceTypo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!--<com.mikhaellopez.circularimageview.CircularImageView-->
        <!--android:id="@+id/agent_img"-->
        <!--android:layout_width="90dp"-->
        <!--android:layout_height="90dp"-->
        <!--android:layout_marginRight="5dp"-->
        <!--android:src="@drawable/blulogo"-->
        <!--app:civ_border_color="#EEEEEE"-->
        <!--app:civ_border_width="4dp"-->
        <!--app:civ_shadow="true"-->
        <!--app:civ_shadow_color="#8BC34A"-->
        <!--app:civ_shadow_radius="10"-->

        <!--/>-->
        <ImageView
            android:id="@+id/agent_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/blulogo"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#8BC34A"
            app:civ_shadow_radius="10"

            android:contentDescription="Desc" />

        <TextView
            android:id="@+id/depart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="17dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/departDate"
            android:layout_toEndOf="@+id/agent_img"
            android:layout_toRightOf="@+id/agent_img"
            android:text="To      : Mutare" />

        <TextView
            android:id="@+id/destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/agents_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/depart"
            android:layout_toEndOf="@+id/agent_img"
            android:layout_toRightOf="@+id/agent_img"
            android:text="From : Harare "

            android:textSize="17dp" />

        <TextView
            android:id="@+id/agents_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/agent_img"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@+id/agent_img"
            android:layout_toRightOf="@+id/agent_img"
            android:text="Allen Bonasy"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/departDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/postTime"
            android:layout_alignBottom="@+id/postTime"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentRight="true"
            android:text="Depart :  06 / 08 / 2017"
            app:ignore="UnknownId" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
